@using MudBlazor

@if (clerk is null)
{
    <MudProgressCircular Indeterminate="true" Size="Size.Medium" />
}
else
{
    <MudDialog>
        <DialogContent>
            <ClerkForm Clerk="clerk"
                       OnSave="EditAsync"
                       OnCancel="Cancel" />
        </DialogContent>
    </MudDialog>
}